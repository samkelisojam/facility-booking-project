@model Booking
@{
    ViewBag.Title = "Booking Facility";
}
<div class="container mt-5 bg-light" style="background-image:url('~/images/Background.png');">
    <div class="row">
        <!-- Left Div for Image -->
        <div class="col-md-4">
            <img src="~/images/Background.png" alt="Image" class="img-fluid w-100 h-100">
        </div>

        <!-- Right Div for Booking Information -->
        <div class="col-md-8">
            <div class="container"  background-repeat: no-repeat; background-position: center center; background-size: cover;">
                <form asp-controller="Booking" asp-action="AddBooking" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="UserName">Username</label>
                        <input type="text" class="form-control" asp-for="UserName" value="@ViewBag.username" readonly>
                    </div>

                    <div class="row mb-3">
                        <div class="col">
                            <label for="FacilityId" class="form-label">Facility</label>
                            <select asp-for="FacilityId" class="form-select" asp-items="@ViewBag.Cat">
                                <option value="">---Select Your Category---</option>
                            </select>
                        </div>
                        <div class="col">
                            <label for="BookingDate" class="form-label">Booking Date</label>
                            <input type="date" class="form-control" asp-for="BookingDate" required>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col">
                            <label for="StartTime" class="form-label">Start Time</label>
                            <input type="time" class="form-control" asp-for="StartTime" required>
                            <div class="invalid-feedback">
                                Please provide a valid start time.
                            </div>
                        </div>
                        <div class="col">
                            <label for="EndTime" class="form-label">End Time</label>
                            <input type="time" class="form-control" asp-for="EndTime" required>
                            <div class="invalid-feedback">
                                Please provide a valid end time.
                            </div>
                        </div>
                    </div>

                    <div class="form-check mb-3">
                        <input type="checkbox" class="form-check-input" asp-for="IsConfirmed" id="IsConfirmed" disabled>
                        <label class="form-check-label" for="IsConfirmed">Is Confirmed</label>
                    </div>

                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Create Booking
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
