
@model AppUser

@{
    Layout = "_Layout";
    ViewData["Title"] = "Register Facility Staff Member";
}

<h2>Register Facility Staff Member</h2>

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="LastName"></label>
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="IdentityNumber"></label>
        <input asp-for="IdentityNumber" class="form-control" />
        <span asp-validation-for="IdentityNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="userType">Role of Staff</label>
        <select asp-for="userType" class="form-control">
            <option value="FacilityInCharge">Facility In Charge</option>
            <option value="FacilityManager">Facility Manager</option>
        </select>
    </div>

 


    <button type="submit" class="btn btn-primary">Register</button>
    <a class="btn btn-outline-danger" asp-controller="FacilityAdmin" asp-action="ListUsers"> Cancel</a>
</form>
