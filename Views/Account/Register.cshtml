@model RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<div class="container register">
    <div class="row">
        <div class="col-md-3 register-left">
            <img src="https://image.ibb.co/n7oTvU/logo_white.png" alt="" />
            <h3>Welcome</h3>
            <p>Register to use our Online System!</p>
            <a asp-action="LogIn" asp-action="Account" class="btn btn-primary">Login</a><br />
        </div>
        <div class="col-md-9 register-right">
            <form asp-action="Register" method="post">
                <ul class="nav nav-tabs nav-justified" id="myTab" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Register</a>
                    </li>
                </ul>
                <div class="tab-content" id="myTabContent">
                    <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
               
                        <div class="row register-form">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="FirstName"></label>
                                    <input asp-for="FirstName" class="form-control" />
                                    <span asp-validation-for="FirstName" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="LastName"></label>
                                    <input asp-for="LastName" class="form-control" />
                                    <span asp-validation-for="LastName" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Password"></label>
                                    <input asp-for="Password" type="password" class="form-control" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="ConfirmPassword"></label>
                                    <input asp-for="ConfirmPassword" type="password" class="form-control" />
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="squestion1">What is Name of your High School</label>
                                    <input asp-for="squestion1" class="form-control" />
                                    <span asp-validation-for="squestion1" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="sQuestion2">What is Name of Your Province</label>
                                    <input asp-for="sQuestion2" class="form-control" />
                                    <span asp-validation-for="sQuestion2" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="sQuestion3">What your Home TOwn</label>
                                    <input asp-for="sQuestion3" class="form-control" />
                                    <span asp-validation-for="sQuestion3" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Email"></label>
                                    <input asp-for="Email" class="form-control" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="IdentityNumber"></label>
                                    <input asp-for="IdentityNumber" class="form-control" />
                                    <span asp-validation-for="IdentityNumber" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label>User Type</label>
                                    <div class="maxl">
                                        <label class="radio inline">
                                            <input type="radio" asp-for="UserType" value="Student" checked>
                                            <span>Student</span>
                                        </label>
                                        <label class="radio inline">
                                            <input type="radio" asp-for="UserType" value="Visitor">
                                            <span>Visitor</span>
                                        </label>
                                        <label class="radio inline">
                                            <input type="radio" asp-for="UserType" value="Staff">
                                            <span>Staff</span>
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary">Register</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
