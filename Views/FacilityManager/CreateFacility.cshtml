@model Facility


<style>

    /* Style for the title */
    #booking-title {
        font-size: 24px;
        color: #333;
    }
    /* Style for the form container */
    .borders {
        border: 2px solid #333; /* Adjust the border properties as needed */
        border-radius: 10px;
        padding: 20px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); /* Optional box shadow */
    }



    /* Style for the form container */
    .container {
        max-width: 500px; /* Adjust as needed */
        margin: 0 auto;
    }

    /* Style for form labels */
    .form-label {
        font-weight: bold;
    }

    /* Style for form inputs */
    .form-control {
        width: 100%;
        padding: 10px;
        margin-bottom: 10px;
        border: 1px solid #ccc;
        border-radius: 4px;
    }

    /* Style for the primary button */
    .btn-primary {
        background-color: #007bff;
        color: #fff;
    }

    /* Style for the secondary button */
    .btn-secondary {
        background-color: #6c757d;
        color: #fff;
        margin-left: 10px;
    }

        /* Hover effect for buttons */
        .btn-primary:hover,
        .btn-secondary:hover {
            opacity: 0.8;
        }

</style>




<div class="container mt-5 text-center">
    <h2 id="booking-title" class="pt-5">Add  Facility</h2>
</div>

<div class="container">
    <div class="container">
        <form class="borders" asp-action="CreateFacility" id="booking-form" method="post">
         
            <partial name="_AddEditPartialView" model="@Model" />
            <button type="submit" class="btn btn-primary">Add</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>

