@model Facility
@{
    Layout = "_SideLayout";
    ViewBag.Title = "Delete Facility";
}
<h2>Delete Max Users At Once</h2>

<div>
    <h4>Facility Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <!-- Add more fields here as needed -->
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="FacilityId" />
        <div class="form-group">
            <p>Are you sure you want to delete the Max Users At Once for this facility?</p>
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="List">Cancel</a>
        </div>
    </form>
</div>
